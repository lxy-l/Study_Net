        <Button x:Name="startButton" Content="Start&#xd;&#xa;" HorizontalAlignment="Left" Margin="167,10,0,0" VerticalAlignment="Top" Width="75" Height="24"  Click="StartButton_Click" Grid.Column="1" RenderTransformOrigin="-0.399,0.615"/>
